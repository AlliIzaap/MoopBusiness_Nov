<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/step_preview_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ibg_bug_vus_thumbnail_background">

    <com.instabug.bug.view.CorneredImageView
        android:id="@+id/step_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/instabug_container_padding"
        android:adjustViewBounds="true"
        app:ib_bug_cornerRadius="@dimen/ib_core_padding_xsmall"
        app:ib_bug_roundedCorners="all" />

    <ProgressBar
        android:id="@+id/step_preview_prgressbar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerInParent="true" />
</RelativeLayout>